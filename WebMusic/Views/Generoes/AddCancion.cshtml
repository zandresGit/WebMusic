@model WebMusic.Models.Cancion
@{
    ViewData["Title"] = "Agregar Canción";
}
<h2>Agregar</h2>
<h4>Canción</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCancion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAlbum" />
            <partial name="_Cancion" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="DetailsAlbum" asp-route-id="@Model.IdAlbum" class="btn btn-success">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}