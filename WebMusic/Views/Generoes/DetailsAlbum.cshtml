@model WebMusic.Models.Album
@{
    ViewData["Title"] = "Detalles";
}
<link rel="stylesheet" type="text/css"
      href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
<link rel="stylesheet" href="~/lib/Font-Awesome/css/regular.min.css">
<link rel="stylesheet" href="~/lib/Font-Awesome/css/solid.min.css">
<h2>Details</h2>
<div>
    <h4>Álbum</h4>
    <br />
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.anio)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.anio)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CancionsNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CancionsNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="AddCancion" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="fas fa-plus"></i> Canción
    </a>
    <a asp-action="DetailsBanda" asp-route-id="@Model.IdBanda" class="btn btn-success">Volver a la lista</a>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Canciones</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model =>
                                model.Cancions.FirstOrDefault().Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model =>
                                model.Cancions.FirstOrDefault().Link)
                            </th>
                                <th>
                                @Html.DisplayNameFor(model =>
                                model.Cancions.FirstOrDefault().Duracion)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Cancions)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Link)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Duracion)
                                </td>
                                <td>
                                    <a asp-action="EditCancion" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="fas fa-edit"></i></a>
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem"
                                        data-toggle="modal" data-target="#deleteDialog">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="_DeleteDialog" />
@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="/js/deleteDialog.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
    $('#MyTable').DataTable();
    // Delete item
    sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete',
    '/Generoes/DeleteCancion/', false);
    });
</script>
}