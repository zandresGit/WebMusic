@model WebMusic.Models.Banda
@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" type="text/css"
      href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
<link rel="stylesheet" href="~/lib/Font-Awesome/css/regular.min.css">
<link rel="stylesheet" href="~/lib/Font-Awesome/css/solid.min.css">
<h2>Detalles</h2>
<div>
    <h4>Banda</h4>
    <br />
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.origen)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.origen)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AlbumsNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AlbumsNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="AddAlbum" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="fas fa-plus"></i> Álbum
    </a>
    <a asp-action="Details" asp-route-id="@Model.IdGenero" class="btn btn-success">Volver a la lista</a>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Álbumes</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model =>
                                model.Albums.FirstOrDefault().nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model =>
                                model.Albums.FirstOrDefault().anio)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Albums)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.anio)
                                </td>
                                <td>
                                    <a asp-action="EditAlbum" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="fas fa-edit"></i></a>
                                        <a asp-action="DetailsAlbum" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-align-justify"></i></a>
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem"
                                        data-toggle="modal" data-target="#deleteDialog">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="_DeleteDialog" />
@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="/js/deleteDialog.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
    $('#MyTable').DataTable();
    // Delete item
    sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Generoes/DeleteAlbum/', false);
    });
</script>
}